<resources>

    //================== Theme Selector ==================

    <style name="Selector" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimary">@color/selector_primary</item>
        <item name="colorPrimaryDark">@color/selector_primary_dark</item>
        <item name="colorAccent">@color/selector_primary</item>
        <item name="toolbar">@style/Selector.ToolbarStyle</item>
        <item name="toolbar.titleColor">@color/selector_toolbar_title</item>
        <item name="categories.dropdown.titleColor">@color/selector_categories_dropdown_title</item>
        <item name="categories.dropdown.icon.tint">@color/selector_categories_dropdown_icon_tint
        </item>
        <item name="media.titleColor">@color/selector_media_title</item>
        <item name="media.descColor">@color/selector_media_desc</item>
        <item name="media.emptyView">@drawable/ic_empty_selector</item>
        <item name="media.emptyView.textColor">@color/selector_empty_view_text</item>
        <item name="media.checkView.iconColor">@color/selector_media_icon</item>
        <item name="media.checkView.backgroundColor">@color/selector_check_view_background</item>
        <item name="media.checkView.borderColor">@color/selector_check_view_border</item>
        <item name="media.selected.backgroundColor">@color/selector_item_background_selected</item>
        <item name="page.backgroundColor">@color/selector_page_background</item>
        <item name="bottomToolbar.backgroundColor">@color/selector_bottom_toolbar_background</item>
        <item name="bottomToolbar.progress.textColor">@color/selector_bottom_toolbar_progress_text
        </item>
        <item name="bottomToolbar.apply.textColor">@color/selector_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/Selector.Popup</item>
    </style>

    <style name="Selector.ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Selector.Popup" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/selector_categories_popup_background</item>
    </style>


    //================== Theme selector Dark ==================

    <style name="SelectorDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/selector_dark_primary</item>
        <item name="colorPrimaryDark">@color/selector_dark_primary_dark</item>
        <item name="colorAccent">@color/selector_dark_primary</item>
        <item name="toolbar">@style/SelectorDark.ToolbarStyle</item>
        <item name="toolbar.titleColor">@color/selector_dark_toolbar_title</item>
        <item name="categories.dropdown.titleColor">@color/selector_dark_categories_dropdown_title
        </item>
        <item name="categories.dropdown.icon.tint">
            @color/selector_dark_categories_dropdown_icon_tint
        </item>
        <item name="media.titleColor">@color/selector_dark_media_title</item>
        <item name="media.descColor">@color/selector_dark_media_desc</item>
        <item name="media.emptyView">@drawable/ic_empty_selector_dark</item>
        <item name="media.emptyView.textColor">@color/selector_dark_empty_view_text</item>
        <item name="media.checkView.backgroundColor">@color/selector_dark_check_view_background
        </item>
        <item name="media.checkView.iconColor">@color/selector_dark_media_icon</item>
        <item name="media.checkView.borderColor">@color/selector_dark_check_view_border</item>
        <item name="media.selected.backgroundColor">@color/selector_dark_item_background_selected
        </item>
        <item name="page.backgroundColor">@color/selector_dark_page_background</item>
        <item name="bottomToolbar.backgroundColor">@color/selector_dark_bottom_toolbar_background
        </item>
        <item name="bottomToolbar.progress.textColor">
            @color/selector_dark_bottom_toolbar_progress_text
        </item>
        <item name="bottomToolbar.apply.textColor">@color/selector_dark_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/SelectorDark.Popup</item>
    </style>

    <style name="SelectorDark.ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="SelectorDark.Popup" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/selector_dark_categories_popup_background</item>
    </style>


    <style name="Selector.SuperCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/selector_primary</item>
    </style>


</resources>